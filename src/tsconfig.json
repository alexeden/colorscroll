{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist/",
    "importHelpers": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "colorscroll/*": [
        "*"
      ]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "exclude": [
    "../node_modules"
  ]
}
